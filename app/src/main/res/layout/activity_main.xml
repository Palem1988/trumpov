<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.danklemme.trumpov.MainActivity">

    <TextView
        android:id="@+id/markov_text_view"
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/button_make_text"/>

    <Button
        android:id="@id/button_make_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_make_text"/>


</android.support.constraint.ConstraintLayout>
